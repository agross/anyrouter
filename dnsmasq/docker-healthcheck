#!/usr/bin/env bash

set -euo pipefail

server=@localhost
domain=.home.tedeg.eu
status=0

hosts=(
  dsl-router
  lte-router
  anyrouter

  nas
  tedeg-nas
  werkstatt.ap
  b√ºro.ap
  wohnung.ap
)

for host in "${hosts[@]}"; do
  qualified="$host$domain"

  printf 'Looking up %s\n' "$qualified"
  if ! output="$(dig +short "$qualified" "$server")"; then
    status=1
  fi

  [[ -z "$output" ]] && status=2

  printf '%s\n' "$output"
done

exit "$status"
